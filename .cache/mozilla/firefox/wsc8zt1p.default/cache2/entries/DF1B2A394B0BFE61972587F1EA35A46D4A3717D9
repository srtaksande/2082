</span><span class='line'>        <span class="s1">&#39;ENGINE&#39;</span>: <span class="s1">&#39;django.db.backends.mysql&#39;</span>,
</span><span class='line'>        <span class="s1">&#39;NAME&#39;</span>: <span class="s1">&#39;django_db&#39;</span>,
</span><span class='line'>        <span class="s1">&#39;USER&#39;</span>: <span class="s1">&#39;root&#39;</span>,
